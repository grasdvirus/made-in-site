rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    // Règle pour la collection 'products'
    match /products/{productId} {
      // Tout le monde peut lire les produits.
      // C'est nécessaire pour que les visiteurs du site puissent les voir.
      allow read: if true;

      // Seul le serveur (via les API routes sécurisées) peut écrire.
      // On interdit toutes les écritures (create, update, delete) depuis le client.
      allow write: if false;
    }
    
    // Vous pouvez ajouter des règles pour d'autres collections ici.
    // Par exemple, pour une collection 'users' :
    // match /users/{userId} {
    //   allow read, write: if request.auth != null && request.auth.uid == userId;
    // }
  }
}
